package entities;

public class Conta {
	
	private int numConta;
	private String nome;
	private double saldo;
	private char opcao;
	
	public Conta(int numConta, String nome, double saldo) {

		this.numConta = numConta;
		this.nome = nome;
		this.saldo = saldo;
	}
	
	public Conta(String nome) {
		
		this.nome = nome;
	}
	
	public int getNumConta() {
		return numConta;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public double getDeposito() {
		return saldo;
	}

	public double depositoAbertura(double saldo) {
		
		if (opcao == 'S' || opcao == 's') {
			
			return saldo;
			
		}else {
			
			return 0.0;
		}
		
	public double deposito(double saldo) {
		
		return saldo += saldo;
	}
		
	}
	
}
