import java.util.Locale;
import java.util.Scanner;

public class primeira_fase_exercicio_for3 {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite quantas vezes deseja realizar o teste: %n");
		int n = sc.nextInt();
		
		double peso2 = 2.0;
		double peso3 = 3.0;
		double peso5 = 5.0;

		double num1 = 0.0;
		double num2 = 0.0;
		double num3 = 0.0;
		double mediaPonderada = 0.0;
		double somaValores = 0.0;
		double somaValoresPeso = 0.0; 
		
		for (int i=0; i < n; i++) {
			
			System.out.println("Digite os 3 valores com uma casa decimal: ");
			
			num1 = sc.nextDouble();
			num1 = num1 * peso2;
			
			num2 = sc.nextDouble();
			num2 = num2 * peso3;

			num3 = sc.nextDouble();
			num3 = num3 * peso5;
			
			somaValores = num1 + num2 + num3;
			
			somaValoresPeso = peso2 + peso3 + peso5;
			
			mediaPonderada = somaValores / somaValoresPeso;

		}
		
		System.out.println(mediaPonderada);
		System.out.println(mediaPonderada);
		System.out.println(mediaPonderada);
		
		sc.close();
		
	}

}
