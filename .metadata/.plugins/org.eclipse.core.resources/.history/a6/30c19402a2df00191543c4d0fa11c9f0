import java.util.Scanner;

public class primeira_fase_exercicio_while_03 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Digite o código do produto ou 4 para finalizar:");
		
		int cod = sc.nextInt();

		int alcool = 1;
		int gasolina = 2;
		int diesel = 3;
		int fim = 4;
		
		while (cod != 4) {
			
			if (cod == 1) {
				
				alcool = alcool + 1;
				
			} else if (cod == 2) {
				
				gasolina = gasolina + 1;
				
			} else if (cod == 3) {
				
				diesel = diesel + 1;

			} 
			
		}

		System.out.printf("MUITO OBRIGADO %n %d: %n %d: %n %d: ", alcool, gasolina, diesel);
		
		sc.close();
		
	}

}
