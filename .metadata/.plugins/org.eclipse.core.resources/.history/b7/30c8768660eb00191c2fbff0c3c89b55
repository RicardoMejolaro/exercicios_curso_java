package application;

import java.util.Scanner;

public class Programa8 {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		
		
		System.out.print("Digite a quantidade de linhas: ");
		int l = sc.nextInt();
		
		System.out.print("Digite a quantidade de colunas: ");
		int c = sc.nextInt();
		
		int [][] matriz = new int[l][c];
		
		System.out.print("Informe os números para preencher a tabela: ");
		
		for(int i=0; i<matriz.length; i++) {
			
			for(int j=0; i<matriz[i].length; j++) {
												
				matriz[i][j] = sc.nextInt();				
				
			}
		}
		
		System.out.print("Qual número deseja localizar na tabela: ");
		int busca = sc.nextInt();
		
		for(int i=0; i<matriz.length; i++) {
			
			for(int j=0; j<matriz[i].length; i++) {
				
				if(matriz[i][j] == busca) {
					
					System.out.print("Posições: " + i + ", " + j + ": ");
				}

				if (j > 0) {
					System.out.println("Left: " + matriz[i][j-1]);
				}
				
				if (i > 0) {
					System.out.println("Up: " + matriz[i-1][j]);
				}
				
				if (j < matriz[i].length-1) {
					System.out.println("Right: " + matriz[i][j+1]);
				}
				
				if (i < matriz.length-1) {
					System.out.println("Down: " + matriz[i+1][j]);
					
				}
			}
			
		}
		
		
		
		sc.close();
	}

}
