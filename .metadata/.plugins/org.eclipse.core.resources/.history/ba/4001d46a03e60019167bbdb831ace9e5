package application;

import java.util.Locale;
import java.util.Scanner;

import entities.Locadora;

public class Programa6 {

	public static void main(String[] args) {

		Locale.setDefault(Locale.US);
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Digite o total de videos na locadora: ");
		int quantidade = sc.nextInt();
		
		System.out.print("Digite o valor cobrado por locação: ");
		double valor = sc.nextDouble();
		
		Locadora locadora = new Locadora(quantidade, valor);
		
		locadora.faturamentoAnual(quantidade, valor);
		System.out.printf("O faturamento anual foi: %2.f", locadora);
		
		sc.close();
	}

}
