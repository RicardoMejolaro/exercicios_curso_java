package entities;

public class Conta {

	private int numConta;
	private String nome;
	private double saldo;
	private char opcao;

		public Conta(int numConta, String nome, double saldo) {
	
			this.numConta = numConta;
			this.nome = nome;
			this.saldo = saldo;
	
		}
	
		public Conta(String nome) {
	
			this.nome = nome;
		}
	
		public int getNumConta() {
			return numConta;
		}
	
		public String getNome() {
			return nome;
		}
	
		public void setNome(String nome) {
			this.nome = nome;
		}
	
		public double getSaldo() {
			return saldo;
		}
	
		public double depositoAbertura() {
			
			if (opcao == 'S' || opcao == 's') {
				
				return saldo;
				
			}else {
				
				return 0.0;
			}
			
		public void depositoAvulso(double deposito) {
			
			 saldo += saldo + deposito;
		}
		
		public void saque(double saque) {
			
			 saldo -= saque;
		}
		
	}

}
